# Shora AI Payment SDK - Environment Configuration

# API Configuration
SHORA_BASE_URL=https://api.shora.cloud
SHORA_API_KEY=shora_free_123456789
SHORA_SECRET_KEY=your_secret_key_here
SHORA_WEBHOOK_SECRET=your_webhook_secret_here

# Security
JWT_EXPIRY=1h
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Monitoring
MONITORING_ENABLED=true
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=console

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CB_FAILURE_THRESHOLD=5
CB_TIMEOUT=60000
CB_RESET_TIMEOUT=30000

# API Settings
API_TIMEOUT=30000
API_RETRIES=3
API_RETRY_DELAY=1000

# Development
NODE_ENV=development
DEBUG=shora:*
